    <script>
        // Tab switching functionality
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const targetTab = tab.dataset.tab;
                
                tabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(tc => tc.classList.remove('active'));
                
                tab.classList.add('active');
                document.getElementById(targetTab).classList.add('active');
            });
        });

        // Event form submission
        document.getElementById('eventForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const title = document.getElementById('eventTitle').value;
            const location = document.getElementById('eventLocation').value;
            const dateTime = new Date(document.getElementById('eventDate').value);
            const description = document.getElementById('eventDescription').value;
            
            const formattedDate = dateTime.toLocaleDateString('en-US', { 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
            });
            const formattedTime = dateTime.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit' 
            });
            
            const eventHTML = `
                <div class="event-item">
                    <h4>${title}</h4>
                    <p class="event-meta">📍 ${location} | 📆 ${formattedDate} | ⏰ ${formattedTime}</p>
                    <p>${description}</p>
                    <span class="status active">Active</span>
                </div>
            `;
            
            document.getElementById('eventsList').insertAdjacentHTML('afterbegin', eventHTML);
            
            e.target.reset();
            alert('Event posted successfully!');
        });

        // Complaint form submission
        document.getElementById('complaintForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const category = document.getElementById('complaintCategory').value;
            const title = document.getElementById('complaintTitle').value;
            const today = new Date().toLocaleDateString('en-US', { 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
            });
            
            const complaintHTML = `
                <li class="complaint-item">
                    <div class="complaint-info">
                        <h4>${title}</h4>
                        <p>Category: ${category.charAt(0).toUpperCase() + category.slice(1)} | Submitted on: ${today}</p>
                    </div>
                    <span class="status pending">Pending</span>
                </li>
            `;
            
            document.getElementById('complaintList').insertAdjacentHTML('afterbegin', complaintHTML);
            
            e.target.reset();
            alert('Complaint submitted successfully! You will receive updates via email.');
        });

        // Club message form submission
        document.getElementById('clubMessageForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const clubName = document.getElementById('clubSelect').options[document.getElementById('clubSelect').selectedIndex].text;
            const message = document.getElementById('clubMessage').value;
            const today = new Date().toLocaleDateString('en-US', { 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            const messageHTML = `
                <div class="notice-item">
                    <h4>${clubName}</h4>
                    <p class="notice-date">Posted on: ${today}</p>
                    <p>${message}</p>
                </div>
            `;
            
            // Add a section to display club messages if it doesn't exist
            let messagesSection = document.querySelector('#clubMessages');
            if (!messagesSection) {
                const clubCollabCard = document.querySelector('#clubs .card:last-child');
                const messagesSectionHTML = `
                    <div class="card" style="margin-top: var(--space-24);">
                        <h3>📨 Recent Club Messages</h3>
                        <div id="clubMessages"></div>
                    </div>
                `;
                clubCollabCard.insertAdjacentHTML('afterend', messagesSectionHTML);
                messagesSection = document.querySelector('#clubMessages');
            }
            
            messagesSection.insertAdjacentHTML('afterbegin', messageHTML);
            
            alert('Message posted to club successfully!');
            e.target.reset();
        });

        // Notice form submission
        document.getElementById('noticeForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const title = document.getElementById('noticeTitle').value;
            const content = document.getElementById('noticeContent').value;
            const today = new Date().toLocaleDateString('en-US', { 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
            });
            
            const noticeHTML = `
                <div class="notice-item">
                    <h4>${title}</h4>
                    <p class="notice-date">Posted on: ${today}</p>
                    <p>${content}</p>
                </div>
            `;
            
            document.getElementById('noticesList').insertAdjacentHTML('afterbegin', noticeHTML);
            
            e.target.reset();
            alert('Notice posted successfully!');
        });

        // Feedback form submission
        document.getElementById('feedbackForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const feedbackType = document.getElementById('feedbackType').value;
            const subject = document.getElementById('feedbackSubject').value;
            const message = document.getElementById('feedbackMessage').value;
            const isAnonymous = document.getElementById('anonymous').checked;
            const today = new Date().toLocaleDateString('en-US', { 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
            });
            
            // Determine status based on feedback type
            let statusClass = 'pending';
            let statusText = 'Under Review';
            if (feedbackType === 'appreciation') {
                statusClass = 'completed';
                statusText = 'Acknowledged';
            }
            
            const feedbackHTML = `
                <div class="notice-item">
                    <h4>${feedbackType.charAt(0).toUpperCase() + feedbackType.slice(1)}: ${subject}</h4>
                    <p class="notice-date">Submitted on: ${today}</p>
                    <p>Status: <span class="status ${statusClass}">${statusText}</span></p>
                </div>
            `;
            
            // Add the new feedback to the feedback list
            const feedbackListContainer = document.querySelector('#feedback .card:last-child');
            feedbackListContainer.insertAdjacentHTML('beforeend', feedbackHTML);
            
            alert('Thank you for your feedback! We appreciate your input.');
            e.target.reset();
        });
    </script>
</body>
</html>
